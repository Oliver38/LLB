                </div>
            </form>
        </div>
    </div>
</div><!-- End Basic Modal-->



<script>function PostFormationModal(Id, Name) {
        // alert(Id + Name + CityFee + Municipalty + TownFee + RDCFee);

    $('#ApplicationId').val(Id);
    $('#feetitle').html(Name);
      
    $('#PostFormationModal').modal('show');

    }</script>
