@{
    ViewData["Title"] = "Licenses";
}
@{
    Layout = "_LayoutMain";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">


            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Table with hoverable rows</h5>
                    <div class="card-header">
                        <button type="button" onclick="region()" class="btn btn-primary">
                            Add Region
                        </button>
                    </div>

                    <!-- Table with hoverable rows -->
                    <table class="table table-responsiveß table-hover table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Region Name</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var removalRegion in ViewBag.RemovalRegions)
                            {
                                <tr>
                                    <th scope="row">1</th>
                                    <td>@removalRegion.RegionName</td>
                                    
                                    <td>
                                        <button type="button"  class="btn btn-primary">
                                            Basic Modal
                                        </button>
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with hoverable rows -->

                </div>
            </div>
        </div>
    </div>
</section>


<!-- Basic Modal -->

<div class="modal fade" id="FeesModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Basic Modal</h5> <h5 class="modal-title" id="feetitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/Removalfees/RemovalRegion" enctype="multipart/form-data" method="post">
                <div class="modal-body">
                    <div class="col-md-12">
                        <label for="inputName5" class="form-label">Region Name</label>
                        
                        <input type="text" name="regionName" class="form-control" id="CityFee">
                    </div>
                    <div class="col-md-12">
                        <label for="inputName5" class="form-label">Description</label>
                        <input type="text" name="description" class="form-control" id="MunicipaltyFee">
                    </div>
                  

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div><!-- End Basic Modal-->

<script>

    function region() {
        // alert(Id + Name + CityFee + Municipalty + TownFee + RDCFee);

       
        $('#FeesModal').modal('show');

    }
</script>   