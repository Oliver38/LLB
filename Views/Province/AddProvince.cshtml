@{
    Layout = "_LayoutMain";
}


<div class="card">
    <div class="card-body">
        <h5 class="card-title">Province List</h5>
        <button class="btn btn-primary mb-3" onclick="postprovince()">Add Province</button>

        <table class="table table-striped">
            <thead>
                <tr>
                    
                    <th>Name</th>
                   
                    <th>Description</th>
                    <th>Date Added</th>
                    <th>Status</th>
                    
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var province in ViewBag.Provinces)
                {
                    <tr>
                       
                        <td>@province.Name</td>
                        
                        <td>@province.Description</td>
                        <td>@(province.DateAdded?.ToString("yyyy-MM-dd HH:mm") ?? "N/A")</td>
                        <td>@province.Status</td>
                       
                        <td>
                            <button class="btn btn-sm btn-warning" onclick="openModal('@province.Id')">Edit</button>
                            <button class="btn btn-sm btn-danger" onclick="deleteProvince('@province.Id')">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




<!-- Basic Modal -->

<div class="modal fade" id="PostFormationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Post Fomation For </h5> &nbsp;<b><h5 class="modal-title" id="feetitle"></h5></b>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/Postprocess/AddFee" enctype="multipart/form-data" method="post">

                    <div class="col-md-12">
                        @*<label for="inputName5" class="form-label">Select Post Formation Process</label>
                            <input type="hidden" name="id" class="form-control" value="" id="ApplicationId">*@




                        <!-- Radio Button -->
                        <!--<div class="col-md-12 d-flex align-items-center mb-3">
                            <input type="radio" name="selectProcess" class="form-check-input me-2" id="MunicipaltyFee">
                            <label for="MunicipaltyFee" class="form-label mb-0">Municipalty Fee</label>
                        </div>-->
                        <!-- Process Name -->
                        <div class="mb-3">
                            <label for="processName" class="form-label">Process Name</label>
                            <input type="text" class="form-control" id="processNameb" name="ProcessName" placeholder="Enter Process Name">
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <input type="text" class="form-control" id="descriptionb" name="Description" placeholder="Enter Description">
                        </div>

                        <!-- Code -->
                        <div class="mb-3">
                            <label for="code" class="form-label">Code</label>
                            <input type="text" class="form-control" id="codeb" name="Code" placeholder="Enter Code">
                        </div>

                        <!-- Fee -->
                        <div class="mb-3">
                            <label for="fee" class="form-label">Fee</label>
                            <input type="number" class="form-control" id="feeb" name="Fee" placeholder="Enter Fee" step="0.01" min="0">
                        </div>

                    </div>



                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>


                    </div>
                </form>
            </div>
        </div>
    </div>
</div><!-- End Basic Modal-->
<!-- Basic Modal -->

<div class="modal fade" id="postprovince" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Province </h5> &nbsp;<b><h5 class="modal-title" id="processNametitle"></h5></b>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="provinceModalLabel">Manage Province</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/Province/AddProvince" enctype="multipart/form-data" method="post">

                        <div class="modal-body">
                            <input type="hidden" id="Id" name="Id">

                            <div class="mb-3">
                                <label for="Name" class="form-label">Name</label>
                                <input type="text" class="form-control" id="Name" name="Name" required>
                            </div>



                            <div class="mb-3">
                                <label for="Description" class="form-label">Description</label>
                                <textarea class="form-control" id="Description" name="Description"></textarea>
                            </div>



                            <div class="mb-3">
                                <label for="Status" class="form-label">Status</label>
                                <select class="form-control" id="Status" name="Status">
                                    <option value="Active">Active</option>
                                    <option value="Inactive">Inactive</option>
                                </select>
                            </div>


                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div><!-- End Basic Modal-->

