@{
    Layout = "_Layout";
}

<!-- Booking Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Liquor Licensing Board</h6>
            <h1 class="mb-5">Sign In for <span style="color:#008000" class=" text-uppercase">Liquor Licensing</span></h1>
        </div>
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="~/front/img/carousel-1a.jpg" style="margin-top: 25%;">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.3s" src="~/front/img/carousel-1a.jpg">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s" src="~/front/img/carousel-2b.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.7s" src="~/front/img/carousel-1a.jpg">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">

                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <div class="text-center wow fadeInUp" data-wow-delay="0.1s">

                        <h1 class="mb-5">Please <span  style="color:#008000" class=" text-uppercase">Login</span></h1>
                        <span class="text-danger">@TempData["error"]</span>
                    </div>
                    </div>
                    <form action="/Auth/Login" method="post" enctype="multipart/form-data">
                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="email" name="email" placeholder="Your Email">
                                    <label for="name">Your Email</label>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div class="form-floating date">
                                    <input type="password" class="form-control" id="password" name="password" />
                                    <label for="checkin">Password</label>
                                </div>
                            </div>
                         
                            <div class="col-12">

                                <button style="background-color:#008000" class="btn btn-primary w-100 py-3" type="submit">Login</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

<!-- Booking End -->
<!-- Newsletter Start -->
<div class="container newsletter mt-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="row justify-content-center">
        <div class="col-lg-10 border rounded p-1">
            <div class="border rounded text-center p-1">
                <div class="bg-white rounded text-center p-5">
                    <h4 style="color:#008000" class="mb-4">Subscribe Our <span class=" text-uppercase" style="color:#008000">Newsletter</span></h4>
                    <div class="position-relative mx-auto" style="max-width: 400px;">
                        <input class="form-control w-100 py-3 ps-4 pe-5" type="text" placeholder="Enter your email">
                        <button style="background-color:#008000" type="button" class="btn btn-primary py-2 px-3 position-absolute top-0 end-0 mt-2 me-2">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Newsletter Start -->
