<script>function myFunction() {

        //$("#idbad").empty();
        var x = document.getElementById("natid");
        x.value = x.value.toUpperCase();

        var data = $("#natid").val();
        //console.log(data);
        // $("#idgood").empty();

        // alert(data);
        // e.preventDefaut();


        $.ajax({
            type: 'GET',
            url: '/Auth/CheckId',
            contentType: "application/json; charset=utf-8",

            datatype: 'text',
            data: { natid: data },
            success: function (data) {
                if (data.success === "ok") {
                    // alert();
                    $('#idbad').html('');
                    $('#idgood').html(data.msg);
                    document.getElementById("myBtnciti").disabled = false;
                } else {
                    // DoSomethingElse()
                    // alert(response.responseText);
                    $('#idgood').html('');
                    $('#idbad').html(data.msg);
                    document.getElementById("myBtnciti").disabled = true;
                }
            },
            error: function (data) {
                $('#idgood').html('');
                $('#idbad').html(data.msg); //
                document.getElementById("myBtnciti").disabled = true;
            }

        });




    }</script>

<script>function checkNat() {
        var country = $("#countrySelect").val();
        var idContainer = $("#idContainer");

        if (country === "Zimbabwe") {
            idContainer.html(`
                    <div class="form-floating date">
                        <input type="text" class="form-control" required id="natid" onblur="myFunction()" name="natID" />
                        <label for="checkin">National ID</label>
                        <div style="color:red;" id="idbad"></div>
                        <div style="color:green;" id="idgood"></div>
                    </div>
                `);
        } else {
            idContainer.html(`
                    <div class="form-floating date">
                        <input type="text" class="form-control" required id="natid" name="natID" />
                        <label for="checkin">Passport</label>
                        <div style="color:red;" id="idbad"></div>
                        <div style="color:green;" id="idgood"></div>
                    </div>
                `);
        }
    }</script>
