@{
    ViewData["Title"] = "Licenses";
}
@{
    Layout = "_LayoutMain";
}

<section class="section">
    <div class="row">
        <div class="col-lg-12">


            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Table with hoverable rows</h5>

                    <!-- Table with hoverable rows -->
                    <table class="table table-responsiveß table-hover table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Nature Of Fee</th>
                                <th scope="col">City</th>
                                <th scope="col">Municipalty</th>
                                <th scope="col">Town</th>
                                <th scope="col">RDC</th>
                                <th scope="col">Date Updated</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var license in ViewBag.License)
                            {
                                <tr>
                                    <th scope="row">1</th>
                                    <td>@license.LicenseName</td>
                                    <td>@license.CityFee</td>
                                    <td>@license.MunicipaltyFee</td>
                                    <td>@license.TownFee</td>
                                    <td>@license.RDCFee</td>
                                    <td>@license.DateUpdated</td>
                                    <td> <button type="button" onclick="feeModal('@license.Id', '@license.LicenseName','@license.CityFee','@license.MunicipaltyFee','@license.TownFee', '@license.RDCFee')" class="btn btn-primary" >
    Basic Modal
</button></td>


                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with hoverable rows -->

                </div>
            </div>
        </div>
    </div>
</section>


<!-- Basic Modal -->

<div class="modal fade" id="FeesModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Basic Modal</h5> <h5 class="modal-title" id="feetitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/Settings/UpdateFee" enctype="multipart/form-data" method="post">
                <div class="modal-body">
                    <div class="col-md-12">
                        <label for="inputName5" class="form-label">City Fee</label>
                        <input type="hidden" name="Id" class="form-control" value="" id="Id">
                        <input type="text" name="CityFee"  class="form-control" id="CityFee">
                    </div>
                    <div class="col-md-12">
                        <label for="inputName5" class="form-label">Municipalty Fee</label>
                        <input type="text" name="MunicipaltyFee" class="form-control" id="MunicipaltyFee">
                    </div>
                    <div class="col-md-12">
                        <label for="inputName5" class="form-label">Town Fee</label>
                        <input type="text" name="TownFee" class="form-control" id="TownFee">
                    </div>
                    <div class="col-md-12">
                        <label for="inputName5" class="form-label">Rural District COuncil Fee</label>
                        <input type="text" name="RDCFee" class="form-control" id="RDCFee">
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div><!-- End Basic Modal-->

<script>

    function feeModal(Id, Name, CityFee, MunicipaltyFee, TownFee, RDCFee) {
        // alert(Id + Name + CityFee + Municipalty + TownFee + RDCFee);

        $('#Id').val(Id);
        $('#feetitle').html(Name);
        $('#CityFee').val(CityFee);
        $('#MunicipaltyFee').val(MunicipaltyFee);
        $('#TownFee').val(TownFee);
        $('#RDCFee').val(RDCFee);
        $('#FeesModal').modal('show');

    }
</script>