<div class="modal fade" id="addDirector" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Adding Director Details </h5> <h5 class="modal-title" id="feetitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
             <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="inputName5" class="form-label">Name</label>
                            <input type="hidden" name="applicationId" class="form-control" value="@ViewBag.ApplicationInfo.Id" id="Id">
                            <input type="text" name="name" class="form-control" id="name">
                        </div>

                        @foreach (var attachment in ViewBag.Attachments)
                        {
                            @if (attachment.DocumentTitle == "Applicant National Id")
                            {

                                <div class="col-md-12">
                                    <a href="">
                                        <label for="inputName5" class="form-label">Applicant National Id</label>

                                    </a>
                                    <a class="btn btn-danger" href="#">delete</a>
                                </div>

                            }
                            else
                            {
                               
                    <form action="/License/ManagersInfo" enctype="multipart/form-data" method="post">

                        <div class="col-md-12">
                            <label for="inputName5" class="form-label">Applicant National Id</label>
                            <input type="text" name="surname" class="form-control" id="surname">
                            <button type="submit"></button>
                        </div>
                    </form>
                                


                            }

                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
           
        </div>
    </div>
</div><!-- End Basic Modal-->
