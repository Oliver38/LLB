<!-- Modal -->
<div class="modal fade" id="companyModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Company Verification</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <label>Enter Company Number</label>
                <input type="text" id="companyNumberInput" name="companyNumberInput" class="form-control" placeholder="Company Number">
                <button id="btnCheckCompany" onclick="getCompany()" class="btn btn-primary mt-3">Check</button>

                <div id="companyDetailsResult"></div>
            </div>
        </div>
    </div>
</div>


<script>
    function getType() {

        var zveregion = $("#applicantType").val();
        if (zveregion === "Company") {
           // alert(zveregion);
            $('#companyModal').modal('show');
        }
     

    }


    function getCompany() {
        var companynum = $("#companyNumberInput").val();
       // alert(companynum);

        $.ajax({
            type: 'GET',
            url: '/License/Details',
            contentType: "application/json; charset=utf-8",

            datatype: 'text',
            data: { companyNumber: companynum },
            success: function (data) {
                console.log(data);
                //council
                // alert(data.councildata.councilRegion);
             //   $("#ApplicationTypeName").val(data.councildata.councilRegion);
              //  $("#ApplicationType").val(data.councildata.councilRegionId);
               
                    const info = data.companyInfo;
                    const directors = data.directors;

                    // Build company info HTML
                    let html = `
                    <h5>Company Information</h5>
                    <div cllass="table-responsive">
                    <table class="table table-bordered table-sm">
                        <tr><th>Name</th><td>${info.name}</td></tr>
                        <tr><th>Company No.</th><td>${info.companyNumber}</td></tr>
                        <tr><th>Type</th><td>${info.type}</td></tr>
                        <tr><th>City</th><td>${info.city}</td></tr>
                        <tr><th>Email</th><td>${info.email}</td></tr>
                        <tr><th>Address</th><td>${info.physicalAddress}</td></tr>
                    </table>

                    <h6 class="mt-3">Directors</h6>
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Names</th>
                                <th>Surname</th>
                                <th>ID No</th>
                                <th>Email</th>
                                <th>Address</th>
                            </tr>
                        </thead>
                        <tbody>
                `;

                    directors.forEach(dir => {
                        html += `
                        <tr>
                            <td>${dir.names}</td>
                            <td>${dir.surname}</td>
                            <td>${dir.id_no}</td>
                            <td>${dir.email}</td>
                            <td>${dir.address}</td>
                        </tr>
                    `;
                    });

                    html += `
                        </tbody>
                    </table>
                    </div>
                `;

                    $("#companyDetailsResult").html(html);

                    // Fill Business name and make readonly
                $("#businessName").val(info.name).prop("readonly", true);
                $("#OperationAddress").val(info.postalAddress).prop("readonly", true);
                
                $("#companyNumber").val(info.companyNumber);
               

            },
            error: function (data) {
                $("#companyDetailsResult").html(
                    `<div class="alert alert-danger">Error checking company</div>`
                );
            }

        });
        
    }

   
</script>