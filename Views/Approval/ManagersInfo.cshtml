@{
    Layout = "_LayoutMain";



}


    <div class="row">
        <div class="card">
            <div class="card-body" id="_step1">

                <div class="card-header">
                    <div class="text-center">
                        <h5 class="card-title text-success">@TempData["result"]</h5>
                    </div>
                    <h5 class="card-title">Manager's Particulars'</h5>

                </div>



                <table class="table table-responsiveß table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>National Id</th>
                            <th>National Id </th>
                            <th>Fingerpints </th>
                            <th>Form 55</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var manager in ViewBag.ManagersInfo)
                        {
                            <tr>
                                <td>@manager.Name</td>
                                <td>@manager.Surname</td>
                                <td>@manager.NationalId</td>
                                <td>
                                    @if (manager.Attachment == "" || manager.Attachment == null)
                                    {<a>No Attachment</a> }
                                    else
                                    {<a target="_blank" href="~/@manager.Attachment"> National Id </a>}
                                </td>
                                <td>
                                    @if (manager.Fingerprints == "" || manager.Fingerprints == null)
                                    {<a>No Attachment</a>}
                                    else
                                    {<a target="_blank" href="~/@manager.Fingerprints"> Fingerprints</a>}
                                </td>

                                <td>
                                    @if (manager.Form55 == "" || manager.Form55 == null)
                                    {<a>No Attachment</a>}
                                    else
                                    {<a target="_blank" href="~/@manager.Form55"> Form 55</a>}
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>



                <div class="card-footer">
                    <div class="text-center">
                        @if (ViewBag.ManagersInfo == null)
                        {
                            <a href="/License/OutletInfo?Id=@ViewBag.ApplicationInfo.Id" class="btn btn-warning">Prev</a>
                        }
                        else
                        {
                            <a href="/Approval/OutletInfo?Id=@ViewBag.ApplicationInfo.Id" class="btn btn-warning">Prev</a>
                            <a href="/Approval/Attachments?Id=@ViewBag.ApplicationInfo.Id" class="btn btn-success">Next</a>

                        }
                    </div>
                </div>
            </div>
            <div class="card-body" id="_step1">
                <div class="card-header">
                    <div class="text-center">
                        <h5 class="card-title text-success">@TempData["result"]</h5>
                    </div>
                    <h5 class="card-title">Verify Managers Information</h5>
                </div>


                <form action="/Approval/Query" method="post" enctytpe="multipart/form-data" class="row g-3">
                    <div class="row">
                        <input type="hidden" name="applicationId" value="@ViewBag.ApplicationInfo.Id" />
                        <input type="hidden" name="stage" value="Approve Managers" />

                        <textarea class="form-control" name="query"></textarea>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>

                </form>
            </div>
        </div>
        </div>

    </div>





<div class="modal fade" id="addDirector" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Adding Director Details </h5> <h5 class="modal-title" id="feetitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/License/ManagersInfo" enctype="multipart/form-data" method="post">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label for="inputName5" class="form-label">Name</label>
                            <input type="hidden" name="applicationId" class="form-control" value="@ViewBag.ApplicationInfo.Id" id="Id">
                            <input type="text" name="name" class="form-control" id="name">
                        </div>
                        <div class="col-md-6">
                            <label for="inputName5" class="form-label">Surname</label>
                            <input type="text" name="surname" class="form-control" id="surname">
                        </div>
                        <div class="col-md-12">
                            <label for="inputName5" class="form-label">National Id</label>
                            <input type="text" name="nationalId" class="form-control" id="TownFee">
                        </div>
                        <div class="col-md-12">
                            <label for="inputName5" class="form-label">Address</label>
                            <textarea type="text" name="address" class="form-control" id="RDCFee"></textarea>
                        </div>

                        <div class="col-md-12">
                            <label for="inputName5" class="form-label">National Id Copy</label>
                            <input type="file" name="file" class="form-control" id="file">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div><!-- End Basic Modal-->
