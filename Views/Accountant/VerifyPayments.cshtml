@{
    Layout = "_LayoutMain";
}


<!-- Recent Sales -->
<div class="row">
    <div class="col-lg-12">
    <div class="col-12">
    <div class="card recent-sales overflow-auto">

        <div class="filter">
            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                <li class="dropdown-header text-start">
                    <h6>Filter</h6>
                </li>

                <li><a class="dropdown-item" href="#">Today</a></li>
                <li><a class="dropdown-item" href="#">This Month</a></li>
                <li><a class="dropdown-item" href="#">This Year</a></li>
            </ul>
        </div>

        <div class="card-body">
            <h5 class="card-title">Recent Sales <span>| Today</span></h5>

            <table class="table table-borderless datatable">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">License Type</th>
                        <th scope="col">License Region</th>
                        <th scope="col">POP</th>
                        <th scope="col">Total Amount</th>
                        <th scope="col">Reference</th>
                        <th scope="col">Status</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>

                    
                    @foreach (var payment in ViewBag.PaymentLogs)
                    {
                        <tr>
                            <th scope="row"><a href="#">#1</a></th>
                            <td>@payment.LicenseType</td>
                            <td>@payment.LicenseArea</td>
                            <td><a href="~/@payment.PopDoc" target="_blank" class="text-primary">View POP</a></td>
                            <td>@payment.Amount</td>
                            <td>@payment.ApplicationRefNum</td>
                            <td><span class="badge bg-warning">@payment.Status</span></td>
                            <td>
                                <a href="/Accountant/Verify?ApplicationId=@payment.ApplicationId&status=approved&paymentId=@payment.PaymentId" onclick="return confirm('Are you sure all information has been rectified and it is correct')" class="btn btn-primary">Confirm Payment</a>
                                <a href="/Accountant/Verify?ApplicationId=@payment.ApplicationId&status=rejected&paymentId=@payment.PaymentId" onclick="return confirm('Are you sure all information has been rectified and it is correct')" class="btn btn-danger">Cancel payment</a>
                               
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>

    </div>
</div><!-- End Recent Sales -->
</div>

       


</div>
